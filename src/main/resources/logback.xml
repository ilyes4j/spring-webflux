<?xml version="1.0" encoding="UTF-8"?>

<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="io.netty.util" level="DEBUG"/>
  <logger name="io.netty.channel.MultithreadEventLoopGroup" level="DEBUG"/>
  <logger name="reactor.netty.tcp.TcpResources" level="DEBUG"/>
  <logger name="reactor.netty.resources.DefaultLoopIOUring" level="DEBUG"/>
  <logger name="reactor.netty.resources.DefaultLoopEpoll" level="DEBUG"/>
  <logger name="io.netty.channel.MultithreadEventLoopGroup" level="DEBUG"/>
  <logger name="io.netty.buffer" level="DEBUG"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
  </root>

</configuration>
